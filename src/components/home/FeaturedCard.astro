---
export interface Props {
    title: string,
    category: string,
    categoryUrl: string,
    url: string,
}

const { title, category, categoryUrl, url } = Astro.props
---


<div class="card">
    <a class="tag" href={categoryUrl}><span class="crossword-tag">{category}</span></a>
    <a class="link" href={url}><h3>{title}</h3></a>
</div>


<style lang="scss">
    .card {
        display: grid;
        gap: 0.15rem;
        padding: 0.65rem 1.25rem 1.25rem 0.75rem;
        background: hsla(0, 0%, 29%, 0.027);
        box-shadow: 0 0 5px -3px hsl(0deg 0% 0% / 0.4);
        border: 1px solid hsl(0deg 0% 0% / 0.1);
        border-radius: var(--radius);
        width: fit-content;
    }

    a.tag {
        height: fit-content;
        padding: 0;
        
        &:hover, &:focus {
            text-decoration: underline;
            text-decoration-color: #2fd72f;
            
        }
    }

    .crossword-tag {
        --clr-3: #232323;
        --clr-4: #7b7c7b;
        --clr-5: #959795;
        --font-size: var(--step-0);
        --drop-shadow: none;
    }

    a {
        width: fit-content;
        text-decoration: none;
    }



    a.link {
        &:hover, &:focus {
            text-decoration: underline;
            text-decoration-color: var(--clr-grey-400);
        }
    } 

    h3 {
        color: var(--clr-grey-400);
        line-height: 1.2;
        letter-spacing: -0.75px;
        font-size: var(--step-2);
        // font-weight: 700;
    }
</style>
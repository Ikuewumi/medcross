---
import featuredImage from "../../images/featured-demo.jpg";
---

<article id="featured-crossword">
    <h2 class="sr-only">Featured Crossword</h2>
    <div class="content">

        <a href="/crossword/raf-2" class="featured-crosword-tag"
            ><span class="crossword-tag">anatomy</span></a
        >
        <a class="featured-crosword-link" href="/crossword/raf"
            ><h3>Random Anatomy Facts</h3></a
        >
    </div>
    <img src={featuredImage.src} alt="Random Anatomy Facts" />
</article>

<style lang="scss">
    article#featured-crossword {
        --gradient-angle: 0deg;
        --clr-3: #eff9ff;
        --clr-4: #82ec82;
        --clr-5: #5ebc5e;
        display: grid;
        position: relative;
        width: min(100%, 30ch);
        aspect-ratio: 10 / 11;
        isolation: isolate;
        border: 2px solid var(--clr-grey-400);
        border-radius: var(--radius);
        box-shadow: var(--shadow-elevation-low);
        -webkit-background-clip: text;

        &:before {
            content: "";
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            background: rgba(30, 37, 30, 0.68);
            // z-index: 1;
        }

        & > img {
            z-index: -1;
            border-radius: inherit;
        }

        & > img,
        & > .content {
            grid-column: 1 / 2;
            grid-row: 1 / 2;
        }

        & > .content {
            z-index: 2;
        }
    }

    .content {
        display: grid;
        gap: 0rem;

        align-self: end;
        padding: 0.75rem 1.25rem 1rem 0.75rem;
    }

    a {
        text-decoration: none;
        width: fit-content;
    }



    a.featured-crosword-link {
        color: var(--clr-grey-800);

        &:hover,
        &:focus-within {
            text-decoration: underline;
        }
    }

    h3 {
        line-height: 1.2;
        letter-spacing: -1px;
        font-size: var(--step-3);
    }

    & > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

</style>

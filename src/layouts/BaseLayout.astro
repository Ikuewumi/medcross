---
import SkipLink from "../components/SkipLink.astro";
import BaseHeader from "../components/BaseHeader.astro";
import Assets from "../components/Assets.astro";
import Toast from "../components/utilities/Toast.svelte";
import "../styles/main.scss"
import MetaInformation from "../components/MetaInformation.astro";
import homePageImage from "../images/home-page.jpg"

const { title } = Astro.props.frontmatter || Astro.props 


const isProduction = (process.env.NODE_ENV || 'development') === 'production'
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <slot name="meta">

        <MetaInformation 
            title={title} 
            description="Medcross - Crosswords for Medical Students And Professionals" 
            image={homePageImage.src}
            content="website" />

    </slot>

    <!-- Service Worker -->
    {isProduction && <script defer src="/registerSW.js"></script> }





    <!-- Database Script -->
    <script defer>
        import { getDb } from "../composables/db";
        window.getDb = async () => {
            if (!window.idb) {
                const db = await getDb()
                window.idb = db
            }

            return window.idb
        }
    </script>

    <title>{ title }</title>
</head>
<body>
    <SkipLink />
    <BaseHeader />
    <main id="main">
        <slot>
    </main>
    <Assets />
    <Toast client:load />


    


</body>
</html>

---
import SkipLink from "../components/SkipLink.astro";
import BaseHeader from "../components/BaseHeader.astro";
import Assets from "../components/Assets.astro";
import Toast from "../components/utilities/Toast.svelte";
import "../styles/main.scss"

const { title } = Astro.props.frontmatter || Astro.props 


const isProduction = (process.env.NODE_ENV || 'development') === 'production'
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <slot name="meta">
        <meta name="description" content="A crossword App">
    </slot>

    <!-- Service Worker -->
    {isProduction && <script src="/registerSW.js"></script> }





    <!-- Database Script -->
    <script>
        import { getDb } from "../composables/db";
        window.getDb = async () => {
            if (!window.idb) {
                const db = await getDb()
                window.idb = db
            }

            return window.idb
        }
    </script>

    <title>{ title }</title>
</head>
<body>
    <SkipLink />
    <BaseHeader />
    <main id="main">
        <slot>
    </main>
    <Assets />
    <Toast client:load />


    


</body>
</html>